<!-- Main Content -->
<div class="forgot-password-container">
    <div class="forgot-password-panel">
        <h1 class="forgot-password-title">🔑 Recuperar Contraseña</h1>
        <form action="/user/forgot-password" method="POST" class="forgot-password-form">
            <div class="form-group">
                <label for="email" class="form-label">Ingrese su email:</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email" 
                    required 
                    class="form-input"
                    placeholder="tu.email@ejemplo.com"
                />
            </div>
            <button type="submit" class="btn-send-link">
                ✉️ Enviar enlace de recuperación
            </button>
        </form>
    </div>
    <a href="/user/login" class="back-to-login-link">← Volver al inicio de sesión</a>
</div>