<!-- Navigation -->
<nav>
    <ul>
        <li class="logo">Mi Tienda</li>
        <div class="nav-links">
            <li><a href="/current">Home</a></li>
            {{#if user}}
                <li><a href="/user/profile">Perfil</a></li>
                <li><a href="/user/logout">Cerrar Sesión</a></li>
            {{else}}
                <li><a href="/user/login">Iniciar Sesión</a></li>
            {{/if}}
            <li><a href="/user/cart" class="btn-primary">🛒 Carrito</a></li>
        </div>
    </ul>
</nav>

<!-- Main Content -->
<div class="profile-container">
    <div class="profile-panel">
        <div class="profile-header">
            <p class="profile-welcome">Bienvenido,</p>
            <h1 class="profile-title">👋 {{user.first_name}}</h1>
        </div>

        <h2 class="section-title">📊 Tus Datos</h2>
        <div class="profile-data">
            <div class="profile-item">
                <span class="profile-label">Nombre:</span>
                <span class="profile-value">{{nombre}}</span>
            </div>
            <div class="profile-item">
                <span class="profile-label">Apellido:</span>
                <span class="profile-value">{{apellido}}</span>
            </div>
            <div class="profile-item">
                <span class="profile-label">Email:</span>
                {{#if email}}
                    <span class="profile-value email">{{email}}</span>
                {{else}}
                    <span class="profile-value">No proporcionado</span>
                {{/if}}
            </div>
            <div class="profile-item">
                <span class="profile-label">Edad:</span>
                <span class="profile-value">{{edad}}</span>
            </div>
            <div class="profile-item">
                <span class="profile-label">Carrito:</span>
                {{#if carrito.length}}
                    <span class="profile-value">{{carrito}}</span>
                {{else}}
                    <span class="profile-value cart-empty">No tienes Productos en el carrito.</span>
                {{/if}}
            </div>
            <div class="profile-item">
                <span class="profile-label">Rol:</span>
                <span class="profile-value role">{{rol}}</span>
            </div>
        </div>

        <div class="profile-actions">
            <a href="/user/logout" class="btn-logout-profile">
                🚪 Salir de la Sesión
            </a>
            {{#ifEqual user.role "admin"}}
                <div class="admin-links">
                    <a href="/admin/panel" class="btn-admin-link">
                        👨‍💼 Panel de Admin
                    </a>
                    <a href="/admin/products" class="btn-admin-link">
                        📦 Administrar Productos
                    </a>
                </div>
            {{/ifEqual}}
        </div>
    </div>
</div>