<!-- Main Content -->
<div class="reset-password-container">
    <div class="reset-password-panel">
        <h1 class="reset-password-title">🔒 Restablecer Contraseña</h1>
        <form action="/user/reset-password/{{token}}" method="POST" class="reset-password-form">
            <div class="form-group">
                <label for="newPassword" class="form-label">Nueva Contraseña:</label>
                <input 
                    type="password" 
                    name="newPassword" 
                    id="newPassword"
                    required 
                    class="form-input"
                    placeholder="Ingresa tu nueva contraseña"
                />
            </div>
            <button type="submit" class="btn-update-password">
                🔄 Actualizar Contraseña
            </button>
        </form>
    </div>
</div>