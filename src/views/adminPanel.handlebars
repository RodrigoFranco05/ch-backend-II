<div>
  {{#ifEqual user.role "admin"}}
    <h2>Panel de Administración</h2>
    <a href="/user/profile">Volver al perfil</a>

    <h3>Usuarios Registrados</h3>
    <table border="1">
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Edad</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
      {{#each users}}
        <tr>
          <td>{{this.first_name}} {{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.age}}</td>
          <td>{{this.role}}</td>
          <td>
            <form method="POST" action="/admin/users/{{this._id}}?_method=DELETE" style="display:inline;">
              <button type="submit">Eliminar</button>
            </form>
            {{!-- <a href="/admin/users/edit/{{this._id}}">Editar</a> --}}
          </td>
        </tr>
      {{/each}}
    </table>

    <h3>Crear Nuevo Usuario</h3>
    <form method="POST" action="/admin/users">
      <input name="first_name" placeholder="Nombre" required>
      <input name="last_name" placeholder="Apellido" required>
      <input name="email" placeholder="Email" type="email" required>
      <input name="password" placeholder="Contraseña" type="password" required>
      <input name="age" placeholder="Edad" type="number" required>
      <select name="role">
        <option value="user">User</option>
        <option value="admin">Admin</option>
      </select>
      <button type="submit">Crear</button>
    </form>

  {{else}}
    <h2>Acceso Denegado</h2>
    <p>No tienes permisos para acceder a esta sección.</p>
    <a href="/user/profile">Volver al perfil</a>
  {{/ifEqual}}
</div>