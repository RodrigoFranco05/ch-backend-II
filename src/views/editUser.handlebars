<h2>Editar Usuario</h2>
<form method="POST" action="/admin/users/{{user._id}}">
  <input name="first_name" value="{{user.first_name}}" required>
  <input name="last_name" value="{{user.last_name}}" required>
  <input name="email" type="email" value="{{user.email}}" required>
  <input name="age" type="number" value="{{user.age}}" required>
  <select name="role">
    <option value="user" {{#if (eq user.role "user")}}selected{{/if}}>User</option>
    <option value="admin" {{#if (eq user.role "admin")}}selected{{/if}}>Admin</option>
  </select>
  <button type="submit">Guardar Cambios</button>
</form>
<a href="/admin/panel">Cancelar</a>